<block wx:if="{{$taroCompReady}}">
    <view class="index">
        <at-nav-bar compid="{{$compid__156}}">
            <view class="menu-title">{{detailData.name}}</view>
        </at-nav-bar>
        <block wx:if="{{isLoading}}">
            <loading-view compid="{{$compid__157}}"></loading-view>
        </block>
        <scroll-view class="scrollview" scroll-y="{{true}}" scroll-with-animation="{{true}}" style="{{anonymousState__temp}}" lower-threshold="{{Threshold}}" upper-threshold="{{Threshold}}">
            <view>
                <view class="detail-image-section">
                    <image mode="widthFix" class="image-content" src="{{detailData.picurl}}"></image>
                    <view class="detail-mask">
                        <view class="at-row" style="margin-top:9px;">
                            <view class="at-col  at-col--auto col-content" style="position:relative">
                                <at-tag compid="{{$compid__158}}">蒸汽炉</at-tag><text class="difficulty-title">难度</text><text class="difficulty-sub-title">简单</text>
                                <at-icon compid="{{$compid__159}}"></at-icon><text class="time-title">{{detailData.time}}</text><text class="time-title">分</text><text class="time-title">{{detailData.timeSec}}</text><text class="time-title" style="margin-right: 10px;">秒</text>
                                <at-tag compid="{{$compid__160}}">
                                    <at-icon compid="{{$compid__161}}"></at-icon><text class="time-title">{{detailData.recorded_people}}</text>
                                </at-tag>
                            </view>
                        </view>
                    </view>
                </view>
                <view class="desc-section" style="margin-top:0px;">
                    <view class="at-row" style="margin-top:4px;">
                        <view class="at-col  at-col--auto col-content">
                            <at-icon compid="{{$compid__162}}"></at-icon>
                            <at-icon compid="{{$compid__163}}"></at-icon>
                            <at-icon compid="{{$compid__164}}"></at-icon>
                            <at-icon compid="{{$compid__165}}"></at-icon>
                            <at-icon compid="{{$compid__166}}"></at-icon><text class="difficulty-title">{{" "}}{{detailData.commentCount}}</text><text class="time-title">条</text><text class="time-title" style="margin-left:10px;">{{detailData.finishCount}} 人做过</text>
                        </view>
                    </view>
                    <view><text class="desc-text">{{detailData.desc}}</text>
                    </view>
                </view>
                <view class="desc-section">
                    <view><text class="step-title">主料</text>
                    </view>
                    <view class="at-row at-row--wrap">
                        <view style="margin-right:6px;" wx:key="index" wx:for="{{detailData.mainingredients}}" wx:for-item="item" wx:for-index="index"><text class="main-text">{{item.name}}</text>
                        </view>
                    </view>
                    <view><text class="step-title">辅料</text>
                    </view>
                    <view class="at-row at-row--wrap">
                        <view style="margin-right:10px;" wx:key="index" wx:for="{{detailData.ingredients}}" wx:for-item="item" wx:for-index="index"><text class="main-text">{{item.name}}{{item.weight}}</text>
                        </view>
                    </view>
                </view>
                <view class="desc-section" wx:key="index" wx:for="{{loopArray27}}" wx:for-item="item" wx:for-index="index">
                    <image mode="widthFix" class="image-content" src="{{item.$original.url}}"></image>
                    <view><text class="step-title">步骤{{stepNumber}}</text>
                    </view>
                    <view><text class="step-desc">{{item.$original.desc}}</text>
                    </view>
                </view>
                <view class="desc-section"><text class="tips-text">{{detailData.tips}}</text>
                </view>
            </view>
        </scroll-view>
        <at-toast compid="{{$compid__167}}"></at-toast>
    </view>
</block>