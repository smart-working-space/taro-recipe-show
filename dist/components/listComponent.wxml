                    </view>
                    <view class="at-row" style="margin-top:4px;">
                        <view class="at-col  at-col--auto col-content">
                            <at-icon compid="{{item.$compid__17}}"></at-icon>
                            <at-icon compid="{{item.$compid__18}}"></at-icon>
                            <at-icon compid="{{item.$compid__19}}"></at-icon>
