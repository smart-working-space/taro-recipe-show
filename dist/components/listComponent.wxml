                <view class="recipe-item">
                    <view bindtap="goTo" data-e-tap-so="this" data-e-tap-a-a="{{item.$original.recipe}}">
                        <image mode="widthFix" class="image-content" src="{{item.$original.picUrl}}"></image>
                    </view>
                    <view class="at-row" style="margin-top:4px;">
                        <view class="at-col  at-col--auto col-content"><text class="recipe-name">{{item.$original.name}}</text>
                        </view>
                        <view class="recipe-abstruct"><text>{{item.$original.abstruct}}</text>
